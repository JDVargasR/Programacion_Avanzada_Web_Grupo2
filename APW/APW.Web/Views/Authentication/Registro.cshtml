@{
    ViewBag.Title = "Registro - Grupo 2 Noticias";
    Layout = "~/Views/Shared/_LayoutAuthentication.cshtml";
}

@if (ViewBag.Mensaje != null)
{
    <div data-swal data-type="error" data-title="No se pudo Registrar" data-text="@ViewBag.Mensaje"></div>
}
@if (ViewBag.OK != null)
{
    <div data-swal data-type="success" data-title="Listo" data-text="@ViewBag.OK"></div>
}

<div class="auth">
    <div class="auth__brand">
        <div class="brand__logo">
            <img src="@Url.Content("~/StaticFiles/img/LogoGrupo2Noticias.png")"
                 alt="Grupo 2 Noticias"
                 class="brand__logo-img" />
        </div>
    </div>

    <div class="auth__panel">
        <form class="form" method="post" action="@Url.Action("Registro","Authentication")">
            <div class="form__top">
                <h1>Crear cuenta</h1>
                <p>Ingresá tus datos para registrarte en Grupo 2 Noticias.</p>
            </div>

            <div class="field">
                <label>Nombre</label>
                <div class="field__wrap">
                    <i class='bx bx-user field__icon'></i>
                    <input class="input"
                           name="nombre"
                           type="text"
                           placeholder="Su nombre"
                           autocomplete="name"
                           required />
                </div>
                <span class="error" style="display:none;">Mensaje de error</span>
            </div>

            <div class="field">
                <label>Correo</label>
                <div class="field__wrap">
                    <i class='bx bx-envelope field__icon'></i>
                    <input class="input"
                           name="correo"
                           type="email"
                           placeholder="Correo@Email.com"
                           autocomplete="email"
                           required />
                </div>
                <span class="error" style="display:none;">Mensaje de error</span>
            </div>

            <div class="field">
                <label>Contraseña</label>
                <div class="field__wrap">
                    <i class='bx bx-lock-alt field__icon'></i>
                    <input class="input"
                           name="contrasena"
                           type="password"
                           placeholder="••••••••"
                           autocomplete="new-password"
                           required />
                </div>
                <span class="error" style="display:none;">Mensaje de error</span>
            </div>

            <button class="btn" type="submit">Registrarme</button>

            <div class="link-row">
                <span>¿Ya tenés cuenta?</span>
                <a href="@Url.Action("Login", "Authentication")">Iniciar sesión</a>
            </div>
        </form>
    </div>
</div>
